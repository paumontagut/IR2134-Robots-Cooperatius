<?xml version="1.0" ?>
<launch>
  <arg name="use_sim_time" default="true"/>
  <arg name="server_uri" default=""/>

  <!-- RMF nodes + fleet adapters -->
  <include file="$(find-pkg-share project_config)/launch/estce.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <arg name="server_uri" value="$(var server_uri)"/>
  </include>

  <!-- Gazebo simulation (loads estce.world) -->
  <include file="$(find-pkg-share project_simulation)/launch/simulation.launch.xml">
    <arg name="map_name" value="estce"/>
  </include>
</launch>
